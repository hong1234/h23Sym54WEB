
{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{# {% block navigation %}

{% endblock %} #}

{% block content %}

<!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <section class="content-header">
            <h1>System Login</h1>
        </section>
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="box box-primary">
                        <div class="box-body">
                            {% if error %}
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            <form action="{{ path('app_login') }}" method="post">
                                <div class="form-group">
                                    <label for="username">Username:</label>
                                    <input type="email" class="form-control" id="inputEmail" name="email" value="{{ last_username }}" required autofocus></br>
                                </div>

                                <div class="form-group">
                                    <label for="password">Password:</label>
                                    <input type="password" class="form-control" id="inputPassword" name="password" required></br>
                                </div>

                                {#
                                If you want to control the URL the user
                                is redirected to on success (more details below)
                                <input type="hidden" name="_target_path" value="/account" />
                                #}
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                <div class="box-footer">
                                    {# <button type="submit" class="btn btn-primary" name="savebutton" value="true">Speichern</button>  #}
                                    <button type="submit" class="btn btn-primary">Login</button>               
                                </div>   
                            </form>
                        </div>            
                    </div>
                </div>  
            </div>
        </section>
    </div>
  <!-- /.content-wrapper -->
{% endblock %}